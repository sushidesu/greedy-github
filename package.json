{
  "name": "greedy-github",
  "version": "1.0.0",
  "main": "index.js",
  "author": "sushidesu",
  "license": "MIT",
  "scripts": {
    "prebuild": "del ./dist/*",
    "build": "concurrently yarn:build:*",
    "build:manifest": "node --experimental-modules scripts/build-manifest.mjs",
    "build:contents": "node --experimental-modules scripts/build-content-scripts.mjs",
    "build:images": "node --experimental-modules scripts/build-images.mjs",
    "build:background": "node --experimental-modules scripts/build-background.mjs",
    "build:options": "node --experimental-modules scripts/build-options.mjs",
    "package": "yarn build && yarn package:zip",
    "package:zip": "cd dist && zip -r ../greedy-github.zip manifest.json background.js contents images options.html options.js"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.211",
    "concurrently": "^7.2.2",
    "cpy": "^9.0.1",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.49",
    "execa": "^6.1.0",
    "globby": "^13.1.2"
  }
}
